<%- include('./partials/head', {title: 'Add User' }) %>
    
    <form action="/users/add" method="POST">
      <label for="username">Username</label><br>
      <input type="text" id="username" name="username"><br>

      <label for="password">Password</label><br>
      <input type="password" id="password" name="password"><br>

      <label for="first_name">First Name</label><br>
      <input type="text" id="first_name" name="first_name" placeholder="John"><br>

      <label for="last_name">Last Name</label><br>
      <input type="text" id="last_name" name="last_name" placeholder="Smith"><br>

      <label for="email">Email</label><br>
      <input type="text" id="email" name="email" placeholder="johnsmith@gmail.com"><br>

      <br>
      <label for="gender-container">Gender</label><br>
      <div id="gender-container">
        <input type="radio" id="male" name="gender" value="Male">
        <label for="male">Male</label>
        
        <input type="radio" id="female" name="gender" value="Female">
        <label for="female">Female</label>
      </div>
      <br>
        
      <label for="phone_number">Phone Number</label><br>
      <input type="text" id="phone_number" name="phone_number" placeholder="08xxxxxxxxxx"><br>

      <label for="address">Address</label><br>
      <input type="text" id="address" name="address" placeholder="Jalan Margonda Raya No. 2"><br>

      <br>
      <input type="submit" id="submit" value="submit">
    </form>

    <%- include('./partials/foot') %>